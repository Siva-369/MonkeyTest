{
  "name": "ai-hiring-assessment-platform",
  "version": "1.0.0",
  "description": "AI-powered hiring assessment platform that evaluates candidates through comprehensive, automated assessments",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "clean": "rimraf dist",
    "copy-files": "copyfiles -u 1 \"public/**/*\" dist/ && copyfiles \"src/**/*\" \"netlify/functions/**/*\" package.json package-lock.json .env* dist/",
    "build": "npm run clean && npm run copy-files"
  },
  "dependencies": {
    "serverless-http": "^3.2.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.9.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "mongodb": "^6.14.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "natural": "^8.0.1",
    "openai": "^4.87.3",
    "sentiment": "^5.0.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "rimraf": "^5.0.1",
    "copyfiles": "^2.4.1"
  }
}
